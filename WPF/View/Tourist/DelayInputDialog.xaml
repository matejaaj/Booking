<Window x:Class="BookingApp.WPF.View.Tourist.DelayInputDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BookingApp.WPF.View.Tourist"
        xmlns:resources="clr-namespace:BookingApp"
        mc:Ignorable="d"
        Title="{resources:Loc DelayTittle}" Height="200" Width="300"
        WindowStartupLocation="CenterScreen"
        Background="{DynamicResource PrimaryBackground}">
    <StackPanel Margin="10">
        <Label Content="{resources:Loc DelayTourist}" FontSize="16"
               Foreground="{DynamicResource PrimaryTextColor}"/>
        <TextBox x:Name="DelayTextBox" Width="45" Style="{DynamicResource FormInput}"/>
        <Button Content="{resources:Loc AddDelay}"
                Style="{StaticResource SmallButton}"
                Margin="5" Padding="3"
                Width="auto"
                Click="SubmitButton_Click"/>
    </StackPanel>
</Window>
